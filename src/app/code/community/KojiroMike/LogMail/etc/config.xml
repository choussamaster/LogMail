<config>
    <global>
        <helpers>
            <logmail>
                <class>KojiroMike_LogMail_Helper</class>
            </logmail>
        </helpers>
        <models>
            <core>
                <rewrite>
                    <email>KojiroMike_LogMail_Model_Core_Email</email>
                    <email_template>KojiroMike_LogMail_Model_Core_Email_Template</email_template>
                </rewrite>
            </core>
            <logmail>
                <class>KojiroMike_LogMail_Model</class>
            </logmail>
        </models>
    </global>
    <default>
        <kojiromike_logmail>
            <email_settings>
                <email_path>var/log/email</email_path>
            </email_settings>
        </kojiromike_logmail>
    </default>
</config>
